{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    // "preserveWhitespaces": "off",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules"
  ]
}